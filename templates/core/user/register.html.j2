{% extends "core/base" %}

{% block header %}
<h1 class="mt-5 text-center">注册</h1>
{% endblock %}

{% block content %}
<form method="post">
  <div class="input-group mb-3">
    <span class="input-group-text">用户名</span>
    <input type="text" name="username" class="form-control" placeholder="用户名 (只允许字母数字组合)" minlength="3" maxlength="25"
      pattern="[a-zA-Z0-9]{3,25}" required>
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text">密码</span>
    <input type="password" name="password" class="form-control" placeholder="密码" minlength="6" required>
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text">昵称</span>
    <input type="text" name="nickname" class="form-control" placeholder="昵称 (可置空)" maxlength="60">
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text">联系方式</span>
    <input type="text" name="contact" class="form-control" placeholder="联系方式 (Telegram / QQ / WeChat...)" required>
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text">Email</span>
    <input type="email" name="email" class="form-control" placeholder="Email" required>
  </div>
  <button type="submit" class="btn btn-outline-primary mb-3">注册</button>
  <a class="btn btn-outline-secondary mb-3" href="/user/login">登录</a>
</form>
{% endblock %}